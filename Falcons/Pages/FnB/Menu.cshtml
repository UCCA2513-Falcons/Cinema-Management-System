@page
@model Falcons.Pages.FnB.MenuModel
@{
    ViewData["Title"] = "Food and Beverages";
}

@section Styles {
    <link href="~/css/FnBMenu.css" rel="stylesheet" />
}

<div class="row grid">

    @if (Model.Menus.Count != 0)
    {
        foreach (var item in Model.Menus)
        {
            <div class="col-md-4">
                <div class="box">
                    <div>
                        <div class="img-box">
                            <img src="@(String.IsNullOrWhiteSpace(item.ImageURL) ? "/assets/img/No-Image.png" : "/assets/img/menus/" + item.ImageURL.Split(",").First())" />

                        </div>
                        <div class="detail-box">
                            <h5 style="color:#cbcbcb;">@item.PackageName</h5>
                            @if (!String.IsNullOrWhiteSpace(@item.Description))
                            {
                                <p style="color:#cbcbcb;">@Html.Raw(@item.Description.Length > 40 ? @item.Description.Substring(0, 40) + "..." : @item.Description)</p>
                            }
                            else
                            {
                                <p style="color:#cbcbcb;"></p>
                            }

                            <div class="options">
                                <h6 style="color:#cbcbcb;"></h6>
                                <a href="./ViewMenuDetails?id=@item.MenuID">
                                    <i class="fas fa-chevron-circle-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

    @if (Model.Products.Count != 0)
    {
        foreach (var item in Model.Products)
        {
            <div class="col-md-4">
                <div class="box">
                    <div>
                        <div class="img-box">
                            <img src="@(String.IsNullOrWhiteSpace(item.ImageURL) ? "/assets/img/No-Image.png" : "/assets/img/products/" + item.ImageURL.Split(",").First())" />
                        </div>
                        <div class="detail-box">
                            <h5 style="color:#cbcbcb;">@item.ProductTitle</h5>
                            @if (!String.IsNullOrWhiteSpace(@item.ProductDescription))
                            {
                                <p style="color:#cbcbcb;">@Html.Raw(@item.ProductDescription.Length > 40 ? @item.ProductDescription.Substring(0, 40) + "..." : @item.ProductDescription)</p>
                            }
                            else
                            {
                                <p style="color:#cbcbcb;"></p>
                            }


                            <div class="options">
                                <h6 style="color:#cbcbcb;"></h6>
                                <a href="./ViewDetails?id=@item.ProductID">
                                    <i class="fas fa-chevron-circle-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }


</div>