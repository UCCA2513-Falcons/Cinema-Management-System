@page
@model Falcons.Pages.FnB.ViewDetailsModel
@{
    ViewData["Title"] = "Food Product Name";
}
@section Styles {
<style>
.textColor {
    color: #cacaca;
}
</style>
}
<div class="row">
    <div class="col-md-5">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" style="width:100%; height: 20em !important;">
                <div class="carousel-item active">
                    <img src="~/assets/img/2021-11-02/popcorn.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/assets/img/2021-11-02/fries.png" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/assets/img/2021-11-02/burger.png" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </button>
        </div>
    </div>
    <div class="col-md-7">
        <div class="row">
            <div class="col-md-5">
                <div class="mt-3">
                    <h3 class="textColor">Mega Crazy Party</h3>
                </div>
                <div class="mt-3">
                    <p class="h5 textColor" style="align-content:center;">RM 13</p>
                </div>
                <div class="mt-3" style="display: flex;">
                    <select class="form-control ml-2">
                        <option>Chicken Burger</option>
                        <option>Beef Burger</option>
                        <option>Fish Burger</option>
                    </select>

                    <select class="form-control ml-2">
                        <option>Coca Cola</option>
                        <option>Pepsi Cola</option>
                        <option>Fanta Grape</option>
                        <option>Ice Lemon Tea</option>
                    </select>

                    <select class="form-control ml-2">
                        <option>BBQ Fries</option>
                        <option>French Fries</option>
                        <option>Tomyam Fries</option>
                    </select>
                </div>
                <button type="button" class="btn btn-warning mt-3 ml-5">Add To Cart</button>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5" style="color:#ffffff;">
    <div class="col-md-12">
        <p class="h2 textColor">Description</p>
        <p class="textColor">Here is some description about the product</p>
    </div>
</div>
<div>
    <dl class="row textColor">
        <dt class="col-sm-3">Size</dt>
        <dd class="col-sm-9">Medium</dd>
        <dt class="col-sm-3">Type</dt>
        <dd class="col-sm-9">Package</dd>
        <dt class="col-sm-3">Available from</dt>
        <dd class="col-sm-9">2021-10-18 to 2021-12-08</dd>
    </dl>
</div>