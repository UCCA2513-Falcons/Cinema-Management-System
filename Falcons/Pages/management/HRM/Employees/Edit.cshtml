@page
@model Falcons.Pages.management.HRM.Employees.EditModel
@{
    Layout = "_ManagementLayout";

    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="form-group form-group-default">
                        <label asp-for="Employee.EmpID"></label>
                        <input class="form-control" asp-for="Employee.EmpID" disabled />
                        <input class="form-control" type="hidden" asp-for="Employee.EmpID" />
                        <input class="form-control" type="hidden" asp-for="Employee.Salary" />
                       
                    </div>
                    <div class="form-group form-group-default">
                        <label asp-for="Employee.FName"></label>
                        <input class="form-control" asp-for="Employee.FName" required />
                    </div>
                    <div class="form-group form-group-default">
                        <label asp-for="Employee.LName"></label>
                        <input class="form-control" asp-for="Employee.LName" required />
                    </div>
                    <div class="form-group form-group-default">
                        <label asp-for="Employee.Department"></label>
                        <input class="form-control" asp-for="Employee.Department" required />
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                        <a href="/management/HRM/Employees/Index" class="btn btn-primary btn-lg ml-3">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>