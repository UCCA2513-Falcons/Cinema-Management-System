@page
@model Falcons.Pages.management.Movies.MoviesModel
@{
    Layout = "_ManagementLayout";

    ViewData["Title"] = "Movies";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Movies</div>
            </div>
            <div class="card-body">
                <!-- Button -->
                <div class="d-flex">
                    <button class="btn btn-primary btn-round ml-auto mb-3" data-toggle="modal" data-target="#addMovieModal">
                        <i class="fa fa-plus"></i>
                        Add Movie
                    </button>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="addMovieModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header no-bd">
                                <h5 class="modal-title">
                                    <span class="fw-mediumbold">
                                        New
                                    </span>
                                    <span class="fw-light">
                                        Movie
                                    </span>
                                </h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <form role="form" method="post">
                                <div class="modal-body">
                                    <p class="small">Please fill in all the field.</p>

                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group form-group-default">
                                                <label asp-for="movies.MovieName"></label>
                                                <input asp-for="movies.MovieName" type="text" class="form-control" placeholder="Name" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group form-group-default">
                                                <label asp-for="movies.Language"></label>
                                                <input asp-for="movies.Language" type="text" class="form-control" placeholder="Language" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group form-group-default">
                                                <label asp-for="movies.Subtitle"></label>
                                                <input asp-for="movies.Subtitle" type="text" class="form-control" placeholder="Subtitle" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group form-group-default">
                                                <label asp-for="movies.Duration"></label>
                                                <input asp-for="movies.Duration" type="text" class="form-control" placeholder="Duration" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group form-group-default">
                                                <label asp-for="movies.Genre"></label>
                                                <input asp-for="movies.Genre" type="text" class="form-control" placeholder="Genre" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group form-group-default">
                                                <label asp-for="movies.Category"></label>
                                                <input asp-for="movies.Category" type="text" class="form-control" placeholder="Category" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group form-group-default">
                                                <label asp-for="movies.Director"></label>
                                                <input asp-for="movies.Director" type="text" class="form-control" placeholder="Director" required>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group form-group-default">
                                                <label asp-for="movies.Cast"></label>
                                                <input asp-for="movies.Cast" type="text" class="form-control" placeholder="Cast" required>
                                            </div>
                                        </div>
                                        @*<div class="col-sm-12">
                                            <div class="form-group form-group-default">
                                                <label asp-for="movies.Distributor"></label>
                                                <input asp-for="movies.Distributor" type="text" class="form-control" placeholder="Distributor" required>
                                            </div>
                                        </div>*@
                                        <div class="col-sm-12">
                                            <div class="form-group form-group-default">
                                                <label asp-for="movies.ReleaseDate"></label>
                                                <input asp-for="movies.ReleaseDate" type="text" class="form-control" placeholder="Released Date" required>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group form-group-default">
                                                <label asp-for="movies.Synopsis"></label>
                                                <textarea class="form-control" asp-for="movies.Synopsis" rows="8" placeholder="Synopsis of movie here ..."></textarea>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="modal-footer no-bd">
                                    <button type="submit" id="addMovieButton" class="btn btn-primary">Add</button>
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>

                <!-- Table -->
                <form method="post">

                    <div class="table-responsive">
                        <table id="category-row" class=" display table table-striped table-hover" cellspacing="0" width="100%">
                            <thead>
                                <tr role="row"></tr>

                                <tr role="row">
                                    <th>ID</th>
                                    <th>Poster</th>
                                    <th>Name</th>
                                    <th>Synopsis</th>
                                    <th>Language</th>
                                    <th>Subtitle</th>
                                    <th>Duration</th>
                                    <th>Genre</th>
                                    <th>Category</th>
                                    <th>Director</th>
                                    <th>Cast</th>
                                    @*<th>Distributor</th>*@
                                    <th>Released Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @*@{int i = 0;}*@
                                @foreach (var item in Model.Movies)
                                {
                                    //i++;

                                    <tr>
                                        <td>@Html.DisplayFor(M => item.MovieID)</td>
                                        <td><img src="/assets/img/movies/@item.MoviesImgURL" width="40" height="50" /></td>
                                        <td>@Html.DisplayFor(M => item.MovieName)</td>
                                        @if (!String.IsNullOrWhiteSpace(item.Synopsis))
                                        {
                                            <td>@Html.Raw((item.Synopsis.Length > 20 ? item.Synopsis.Substring(0, 20) + "..." : item.Synopsis))</td>
                                        }
                                        else
                                        {
                                            <td></td>
                                        }
                                        <td>@Html.DisplayFor(M => item.Language)</td>
                                        <td>@Html.DisplayFor(M => item.Subtitle)</td>
                                        <td>@Html.DisplayFor(M => item.Duration)</td>
                                        <td>@Html.DisplayFor(M => item.Genre)</td>
                                        <td>@Html.DisplayFor(M => item.Category)</td>
                                        <td>@Html.DisplayFor(M => item.Director)</td>
                                        <td>@Html.DisplayFor(M => item.Cast)</td>
                                        @*<td>@Html.DisplayFor(M => item.Distributor)</td>*@
                                        <td>@Html.DisplayFor(M => item.ReleaseDate)</td>

                                        <td>
                                            <div class="form-button-action">
                                                <a asp-page="EditMovie" asp-route-id="@item.MovieID" class="btn btn-link btn-info"><i class="fa fa-edit"></i></a>

                                                <button asp-page-handler="Delete" asp-route-id="@item.MovieID" onclick="return confirm('Confirm delete')" data-toggle="tooltip" title="" class="btn btn-link btn-danger" data-original-title="Remove">
                                                    <i class="fa fa-times"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>

                                }


                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>