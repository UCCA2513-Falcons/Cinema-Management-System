@page
@model Falcons.Pages.management.FnB.Products.EditModel
@{
    Layout = "_ManagementLayout";

    ViewData["Title"] = "Edit Product";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="form-group form-group-default">
                        <label asp-for="Product.ProductID"></label>
                        <input class="form-control" asp-for="Product.ProductID" disabled />
                        <input class="form-control" type="hidden" asp-for="Product.ProductID" />
                    </div>
                    <div class="form-group form-group-default">
                        <label asp-for="Product.ProductTitle"></label>
                        <input class="form-control" asp-for="Product.ProductTitle" />
                    </div>
                    <div class="form-group form-group-default">
                        <label asp-for="Product.CategoryID"></label>
                        <select asp-for="Product.CategoryID" asp-items="Model.CategoryOptions" class="form-control"></select>
                    </div>
                    <div class="form-group form-group-default">
                        <label asp-for="Product.ProductDescription"></label>
                        <textarea class="form-control" asp-for="Product.ProductDescription" rows="8" placeholder="Product description here ..."></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>