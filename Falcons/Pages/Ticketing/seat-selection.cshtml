@page
@model Falcons.Pages.Ticketing.seat_selectionModel
@{
    ViewData["Title"] = "Seat Booking";
}

@section Styles {
    <link href="~/css/Seat.css" rel="stylesheet" />
}

<div class="section-title">
    <h4>Select Seat</h4>
</div>

