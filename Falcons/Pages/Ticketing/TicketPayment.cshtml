@page
@model Falcons.Pages.Ticketing.TicketPaymentModel
@{
}

@section Styles{

    <style>
        .textbox, select {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #fff;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .button {
            transition-duration: 0.4s;
            border: none;
            color: white;
            text-align: center;
            border-radius: 8px;
            display: inline-block;
            background-color: cornflowerblue;
        }

        .form-select {
            width: 100%;
            display: block;
        }

        option {
            width: 100% !important;
            display: block !important;
        }
    </style>
}

<section>
    <div class="section-title" style="margin-top: 20px;">
        <h4>Complete Payment</h4>
    </div>
</section>

<h5>Please fill in your payment information</h5>

<div class="container">
    <div class="col-lg-12">
        <form method="post">
            <div class="modal-body">

                <div>

                    <div>
                        <input type="text" name="Name" placeholder="Enter Your Full Name" class="textbox" required />
                    </div>

                </div>

                <div style="color: dimgrey;">

                    <select class="form-select">
                        <option disabled>Select Payment Method</option>
                        <option>Visa</option>
                        <option>Master</option>
                    </select>

                </div>

                <div>
                    <div>
                        <input type="number" placeholder="Card Number" class="textbox" required />
                    </div>
                </div>

                <div>
                    <div>
                        <input type="number" placeholder="Expiry Date (MM/YY)" class="textbox" required />
                    </div>
                </div>

                <div>
                    <div>
                        <input type="password" placeholder="CVV" class="textbox" required />
                    </div>
                </div>

            </div>

            <div class="form-group d-flex justify-content-center align-items-center">
                <a class="button btn-info btn ">Check Out</a>
            </div>

        </form>
    </div>

</div>