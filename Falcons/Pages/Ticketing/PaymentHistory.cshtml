@page
@model Falcons.Pages.Ticketing.PaymentHistoryModel
@{
}

<section>
    <div class="section-title" style="margin-top: 20px;">
        <h4>Booking History</h4>
    </div>
</section>



<div class="col-md-12">
    <div>
        <form method="post">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr style="color:lightgray;">
                            <th>Booking ID</th>
                            <th>Ticket Type</th>
                            <th>Movie Name</th>
                            <th>Showroom</th>
                            <th>Showing Time</th>
                            <th>Showing Date</th>
                        </tr>
                    </thead>

                    <tbody style="color:lightgray;">
                        @foreach (var items in Model.Bookings)
                        {
                            <tr>
                                <td>@Html.DisplayFor(b => items.BID)</td>
                                <td>@Html.DisplayFor(b => items.ticketType)</td>
                                <td>@Html.DisplayFor(b => items.Showtime.Movies.MovieName)</td>
                                <td>@Html.DisplayFor(b => items.Showtime.Showroom.ShowroomName)</td>
                                <td>@Html.DisplayFor(b => items.Showtime.StartTime)</td>
                                <td>@Html.DisplayFor(b => items.Date)</td>
                                <td>
                                    <div class="form-button-action">
                                        <button asp-page-handler="Delete" asp-route-id="@items.BID" onclick="return confirm('Are you sure to cancel this booking?')" data-toggle="tooltip" title="" class="btn btn-link btn-danger" data-original-title="Remove">
                                            Cancel
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>

            </div>

        </form>

        <div class="form-group d-flex justify-content-center align-items-center">
            <a class="button btn-info btn" asp-page="/Index">Back to Home Page</a>
        </div>

    </div>

</div>
